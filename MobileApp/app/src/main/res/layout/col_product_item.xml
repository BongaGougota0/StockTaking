<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/imageproView"
            android:layout_width="190dp"
            android:layout_height="200dp"
            android:gravity="center"
            tools:srcCompat="@drawable/asian_coconut_40_ml"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/proName"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="ProductName"
            android:textColor="@color/primaryColorLighter" />

        <TextView
            android:id="@+id/proPrice"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/productName"
            android:layout_marginTop="4dp"
            android:text="ProductPrice"
            android:textColor="@color/primaryColorLighter" />

        <TextView
            android:id="@+id/btnAddproToList"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@id/productQty"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/black_background"
            android:padding="5dp"
            android:text="@string/add_to_list"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>